[flake8]
max-line-length = 88
exclude =
    .git,
    __pycache__,
    .venv,
    env,
    venv,
    .eggs,
    *.egg,
    build,
    dist,
    alembic/versions
ignore =
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
per-file-ignores =
    __init__.py:F401
