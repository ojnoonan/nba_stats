# =============================================================================
# NBA Stats Application Configuration
# =============================================================================
# Copy this file to .env and modify values as needed for your environment

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
ENVIRONMENT=development  # Options: development, production, testing

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database file path (optional - defaults to backend root if not set)
# NBA_STATS_DB_FILE=/path/to/your/nba_stats.db

# Database directory (optional - creates nba_stats.db in this directory)
# NBA_STATS_DATA_DIR=/path/to/your/data

# Database connection settings
NBA_STATS_DB_ECHO=false  # Set to true to see SQL queries in logs
NBA_STATS_DB_POOL_SIZE=5
NBA_STATS_DB_MAX_OVERFLOW=10

# =============================================================================
# API CONFIGURATION
# =============================================================================
NBA_STATS_API_TITLE=NBA Stats API
NBA_STATS_API_VERSION=1.0.0
NBA_STATS_API_DEBUG=false  # Enable debug mode for development
NBA_STATS_API_DOCS_URL=/docs
NBA_STATS_API_REDOC_URL=/redoc

# Rate limiting (requests per window)
NBA_STATS_API_RATE_LIMIT_REQUESTS=100
NBA_STATS_API_RATE_LIMIT_WINDOW=60  # seconds

# CORS settings (comma-separated for multiple values)
# NBA_STATS_API_CORS_ORIGINS=http://localhost:3000,http://localhost:5173
# NBA_STATS_API_CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
# NBA_STATS_API_CORS_HEADERS=*

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# IMPORTANT: Change this secret key in production!
NBA_STATS_SECURITY_SECRET_KEY=your-secret-key-change-in-production
NBA_STATS_SECURITY_ALGORITHM=HS256
NBA_STATS_SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30
NBA_STATS_SECURITY_ADMIN_ENABLED=true

# Admin API key for securing admin endpoints
# NBA_STATS_SECURITY_ADMIN_API_KEY=your-admin-api-key-here

# Security Settings
NBA_STATS_SECURITY_SECRET_KEY=your-super-secret-jwt-key-change-in-production-make-it-very-long
NBA_STATS_SECURITY_ADMIN_ENABLED=true
NBA_STATS_SECURITY_ADMIN_API_KEY=your-admin-api-key-change-in-production

# Security Configuration
NBA_STATS_SECURITY_MAX_REQUEST_SIZE=10485760  # 10MB
NBA_STATS_SECURITY_MAX_QUERY_PARAMS=50
NBA_STATS_SECURITY_MAX_HEADER_SIZE=8192
NBA_STATS_SECURITY_MAX_STRING_LENGTH=500

# Admin Rate Limiting
NBA_STATS_SECURITY_ADMIN_RATE_LIMIT_REQUESTS=10
NBA_STATS_SECURITY_ADMIN_RATE_LIMIT_WINDOW=60

# Security Features
NBA_STATS_SECURITY_ENABLE_SECURITY_HEADERS=true
NBA_STATS_SECURITY_ENABLE_CSP=true
NBA_STATS_SECURITY_ENABLE_XSS_PROTECTION=true
NBA_STATS_SECURITY_ENABLE_SQL_INJECTION_PROTECTION=true
NBA_STATS_SECURITY_ENABLE_ADMIN_AUDIT_LOGGING=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
NBA_STATS_LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Log format string
# NBA_STATS_LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Log file path (optional - logs to console if not set)
# NBA_STATS_LOG_FILE_PATH=/path/to/logs/nba_stats.log

# Log rotation settings
NBA_STATS_LOG_MAX_FILE_SIZE=10485760  # 10MB in bytes
NBA_STATS_LOG_BACKUP_COUNT=5

# =============================================================================
# NBA API CONFIGURATION
# =============================================================================
NBA_STATS_NBA_API_TIMEOUT=30  # Request timeout in seconds
NBA_STATS_NBA_API_MAX_RETRIES=3
NBA_STATS_NBA_API_RETRY_DELAY=1  # Delay between retries in seconds
NBA_STATS_NBA_API_RATE_LIMIT_DELAY=0.6  # Delay between requests to respect rate limits

# =============================================================================
# DEVELOPMENT/TESTING OVERRIDES
# =============================================================================
# Uncomment these for development
# NBA_STATS_API_DEBUG=true
# NBA_STATS_LOG_LEVEL=DEBUG
# NBA_STATS_DB_ECHO=true

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# Uncomment and configure these for production
# ENVIRONMENT=production
# NBA_STATS_API_DEBUG=false
# NBA_STATS_LOG_LEVEL=WARNING
# NBA_STATS_SECURITY_SECRET_KEY=your-super-secure-production-secret-key-here
# NBA_STATS_SECURITY_ADMIN_API_KEY=your-production-admin-api-key
